<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.example.yiyao.Fragment.OneFragment">
  <LinearLayout
      android:orientation="horizontal"
      android:id="@+id/relative1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/one_color"
      >
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/yaohome_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
      <Button
          android:layout_marginLeft="5dp"
          android:id="@+id/btn_job_find"
          android:layout_width="270dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="@string/find_drug_pingpai"
          android:background="@drawable/buttom_find_job_style"
          android:onClick="onClick"
          />
      <ImageView
          android:layout_marginRight="6dp"
          android:layout_gravity="center"
          android:id="@+id/one_fragment_sao"
          android:src="@drawable/yaohome_sao"
          android:layout_width="60dp"
          android:layout_height="60dp"/>
  </LinearLayout>
  <com.viewpagerindicator.TabPageIndicator
      android:id="@+id/one_indicator"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:theme="@style/StyledIndicators"
      />
  <android.support.v4.view.ViewPager
      android:id="@+id/one_pager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      />
</LinearLayout>
