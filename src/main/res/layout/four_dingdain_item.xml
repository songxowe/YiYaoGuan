<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/white"
    >

  <LinearLayout
      android:id="@+id/linear_dingdan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >


    <ImageView
        android:id="@+id/four_dingdan_iv_goods_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

      <TextView
          android:id="@+id/four_dingdan_tv_goods_bianhao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"

          android:text="订单编号"
          android:textSize="14sp"
          />

      <TextView
          android:id="@+id/four_dingdan_tv_goods_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/four_dingdan_tv_goods_bianhao"
          android:layout_marginTop="5dp"

          android:text="订单金额"
          />

      <TextView
          android:id="@+id/four_dingdan_tv_goods_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/four_dingdan_tv_goods_value"
          android:layout_marginTop="5dp"

          android:text="订单日期"
          />

      <TextView
          android:id="@+id/four_dingdan_tv_goods_state"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/four_dingdan_tv_goods_date"
          android:layout_marginTop="5dp"

          android:text="订单状态"
          />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_tiaozhuan"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/tiaozhuan"
        android:visibility="gone"
        />

  </LinearLayout>

  <LinearLayout

      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"
      android:background="@color/head">

  </LinearLayout>
</RelativeLayout>