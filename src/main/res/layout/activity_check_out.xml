<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ThreeActivity.CheckOutActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@android:color/white">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_back_normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:text="结算"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
  </LinearLayout>

  <ScrollView
      android:layout_weight="1"
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="2dp">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:visibility="visible">

      <RelativeLayout
          android:layout_marginTop="2dp"
          android:id="@+id/relative2"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_dizi"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/dizhi"/>

        <TextView
            android:id="@+id/txt_shouhuoren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_dizi"
            android:text="收货人："
            android:textAppearance="?android:attr/textAppearance"/>

        <TextView
            android:id="@+id/u_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_shouhuoren"
            android:text="刘华智"
            android:textAppearance="?android:attr/textAppearance"/>

        <TextView
            android:id="@+id/u_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/u_name"
            android:text="13874940179"
            android:textAppearance="?android:attr/textAppearance"/>

        <TextView
            android:id="@+id/u_dizi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_shouhuoren"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_dizi"
            android:text="湖南省-张家界市-慈利县 华智国际大厦"/>

        <ImageView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_jiantou"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/s_jr_ico"/>
      </RelativeLayout>

      <LinearLayout
          android:id="@+id/line1"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_below="@id/relative2"
          android:layout_marginTop="10dp"
          android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="选择支付方式"
            android:textSize="15dp"/>
      </LinearLayout>

      <RelativeLayout
          android:id="@+id/relative3"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/line1"
          android:layout_marginTop="2dp"
          android:background="@android:color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/js_zxzf_down"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relative4"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_below="@+id/relative3"
          android:layout_marginTop="10dp"
          android:background="@android:color/white">

        <TextView
            android:id="@+id/text_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="商品金额"/>

        <TextView
            android:id="@+id/text_shop_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text_shop"
            android:text="¥1000.00"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/holo_orange_dark"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relative5"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_below="@+id/relative4"
          android:layout_marginTop="2dp"
          android:background="@android:color/white">

        <TextView
            android:id="@+id/txt_peison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="配送方式"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_peison"
            android:text="普通快递(邮费¥15.00)"/>

        <ImageView
            android:id="@+id/btn_jiantou1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="274dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/txt_peison"
            android:src="@drawable/s_jr_ico"/>

        <ImageView
            android:id="@+id/img_tuijian"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/txt_peison"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/jiesuan_tuijian"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_peison"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_tuijian"
            android:text="药师到家：执业药师上门，用药指导、健康咨询、身体诊察一网打尽！体验价仅需9.9元！"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relative6"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_below="@+id/relative5"
          android:layout_marginTop="2dp"
          android:background="@android:color/white">

        <TextView
            android:id="@+id/txt_juan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="现金抵用券"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_juan"
            android:text="无可用"/>

        <ImageView
            android:id="@+id/btn_jiantou2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/txt_juan"
            android:src="@drawable/s_jr_ico"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relative7"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_below="@+id/relative6"
          android:layout_marginTop="2dp"
          android:background="@android:color/white">

        <TextView
            android:id="@+id/txt_liuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="我要留言："/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_liuyan"
            android:background="@null"
            android:hint="选填, 写下你的留言"
            android:textSize="14dp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relative8"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_below="@+id/relative7"
          android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt_fapiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="发票信息"
            android:textAppearance="?android:attr/textAppearance"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_fapiao"
            android:background="@null"
            android:hint="可输入个人/单位名称"
            android:textSize="14dp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/relative9"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_below="@+id/relative8"
          android:layout_marginTop="10dp"
          android:background="@android:color/white">

        <TextView
            android:id="@+id/txt_shop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="商品金额"/>

        <TextView
            android:id="@+id/text_shop_money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_shop1"
            android:text="¥1000.00"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/txt_yunfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_shop1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="运费"/>

        <TextView
            android:id="@+id/text_yunfei_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_shop_money1"
            android:layout_marginLeft="248dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_yunfei"
            android:text="¥15.00"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/holo_orange_dark"/>
      </RelativeLayout>

    </RelativeLayout>
  </ScrollView>

  <RelativeLayout
      android:id="@+id/bottom_bar"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:background="@android:color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:visibility="visible">

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/txt_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:text="应付金额"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_shop_orMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
       android:layout_marginTop="13dp"
        android:text="¥00.00"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_jiesuan"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:background="@drawable/button_zhifu"
        android:text="提交订单"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
  </RelativeLayout>
</LinearLayout>
