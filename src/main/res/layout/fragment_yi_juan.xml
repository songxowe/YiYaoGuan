<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.yiyao.OneFragment.YiJuanFragment">
  <LinearLayout
      android:layout_marginTop="-33dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <ImageView
        android:src="@drawable/zhekouzhuanqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.chanven.lib.cptr.PtrClassicFrameLayout
        android:layout_marginTop="-35dp"
        android:id="@+id/yi_juan_rotate_header_list_view_frame"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cube_ptr:ptr_duration_to_close="200"
        android:background="@drawable/zhekou_zise"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">
      <android.support.v7.widget.RecyclerView
          android:id="@+id/yi_juan_recyclerView"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
      </android.support.v7.widget.RecyclerView>
    </com.chanven.lib.cptr.PtrClassicFrameLayout>
  </LinearLayout>
</LinearLayout>
