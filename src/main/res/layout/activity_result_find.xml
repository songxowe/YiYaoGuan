<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneActivity.ResultFindActivity">

  <RelativeLayout
      android:id="@+id/relative"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:paddingBottom="5dp"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:id="@+id/linear"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/result_img_return"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="onClick"
            android:src="@drawable/icon_return"
            />

        <TextView
            android:id="@+id/result_tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="返回"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/txt_input_result"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_style"
            android:hint="@string/find_drug_pingpai"
            android:paddingLeft="40dp"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/result_btn_find"
            style="?borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:padding="0dp"
            android:text="搜索"
            android:textColor="@color/colorPrimary"
            />
      </LinearLayout>
      <ImageView
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="80dp"
          android:src="@drawable/icon_search_view"/>
    </FrameLayout>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/relative2"
      android:layout_width="match_parent"
      android:layout_height="0.3dp"
      android:layout_below="@id/relative"
      android:background="#a1a1a1"
      >
  </RelativeLayout>
  <LinearLayout
      android:id="@+id/linear_layout2"
      android:layout_marginTop="5dp"
      android:layout_below="@id/relative"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <Button
        android:id="@+id/result_btn_price"
        android:onClick="onClick"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_style_green"
        android:layout_marginRight="10dp"
        android:text="价格优先"
        android:textColor="@color/now_sale"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/result_btn_zhekou"
        android:onClick="onClick"
        android:layout_marginRight="20dp"
        android:textColor="@color/now_sale"
        android:background="@drawable/button_style_green"
        android:layout_marginLeft="10dp"
        android:text="折扣优先"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
  </LinearLayout>
  <RelativeLayout
      android:layout_marginTop="6dp"
      android:id="@+id/relative1"
      android:layout_width="match_parent"
      android:layout_height="0.3dp"
      android:layout_below="@id/linear_layout2"
      android:background="#a1a1a1"
      >
  </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/relative1">
    <com.chanven.lib.cptr.PtrClassicFrameLayout
        android:id="@+id/result_rotate_header_list_view_frame"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zhekou_zise"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

      <android.support.v7.widget.RecyclerView
          android:id="@+id/result_recyclerView"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
      </android.support.v7.widget.RecyclerView>
    </com.chanven.lib.cptr.PtrClassicFrameLayout>
  </LinearLayout>
</RelativeLayout>
